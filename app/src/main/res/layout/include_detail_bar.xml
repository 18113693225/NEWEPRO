<?xml version="1.0" encoding="utf-8"?>
<com.getbase.floatingactionbutton.FloatingActionsMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multiple_actions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:transitionName="passBt"
    fab:fab_addButtonColorNormal="@color/custom_actionBar">

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/action_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/details_fab_color_update_normal"
        fab:fab_colorPressed="@color/details_fab_color_update_press"
        fab:fab_icon="@mipmap/ic_fab_update" />


</com.getbase.floatingactionbutton.FloatingActionsMenu>